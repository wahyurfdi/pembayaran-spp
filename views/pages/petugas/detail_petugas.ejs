<!DOCTYPE html>
<html>

<head>

  <meta charset="utf-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
  <meta name="description" content="">
  <meta name="author" content="">

  <title>eSPP | Petugas</title>

  <!-- CSS Vendor -->
  <%- include('../partials/css') -%>

</head>

<body id="page-top">

  <!-- Page Wrapper -->
  <div id="wrapper">

    <!-- SIDEBAR -->
    <%- include('../partials/sidebar') -%>
    <!-- End of Sidebar -->

    <!-- Content Wrapper -->
    <div id="content-wrapper" class="d-flex flex-column">

      <!-- Main Content -->
      <div id="content">

        <!-- TOPBAR -->
        <%- include('../partials/header') -%>
        <!-- End of Topbar -->

        <!-- CONTENT AREA -->
        <div class="container-fluid">

          <nav aria-label="breadcrumb">
            <ol class="breadcrumb shadow bg-white">
              <li class="breadcrumb-item"><a href="javascript:history.back()">Petugas</a></li>
              <li class="breadcrumb-item active" aria-current="page">Detail Petugas</li>
            </ol>
          </nav>

          <!-- ROW 1 -->
          <div class="row">
            <div class="col-md-5">
              <div class="card shadow mb-5">
                <div class="card-header py-3">
                  <h6 class="m-0 font-weight-bold text-primary">INFORMASI PETUGAS </h6>
                </div>
                <div class="card-body">
                  <form>
                    <div class="row">
                      <div class="col">
                        <div class="form-group row">
                          <div class="col-md-3 col-form-label text-muted">Nama</div>
                          <div class="col-md-9">
                            <input type="text" class="form-control" value="000123131">
                          </div>
                        </div>
                        <div class="form-group row">
                          <div class="col-md-3 col-form-label text-muted">Username</div>
                          <div class="col-md-9">
                            <input type="text" class="form-control" placeholder="Masukkan Username" value="11123123123">
                          </div>
                        </div>
                        <div class="form-group row">
                          <div class="col-md-3 col-form-label text-muted">Password</div>
                          <div class="col-md-9">
                            <div class="input-group mb-2">
                              <input type="password" class="form-control" placeholder="Masukkan Password" id="inputPassword" value="hahah">
                              <div class="input-group-prepend">
                                <button class="input-group-text" id="showHidePassword">
                                  <i class="fa fa-eye" id="iconPassword"></i>
                                </button>
                              </div>
                            </div>
                          </div>
                        </div>
                        <div class="form-group row">
                          <div class="col-md-3 col-form-label text-muted">Role</div>
                          <div class="col-md-9">
                            <select class="form-control">
                              <option>Admin</option>
                              <option>Petugas</option>
                            </select>
                          </div>
                        </div>
                        <div class="form-group row">
                          <div class="col-md-3 col-form-label text-muted">Status</div>
                          <div class="col-md-9">
                            <select class="form-control">
                              <option>Aktif</option>
                              <option>Non Aktif</option>
                            </select>
                          </div>
                        </div>
                        <div class="form-group row">
                          <div class="col">
                            <button class="btn btn-primary w-25 float-right mt-4">Ubah</button>
                          </div>
                        </div>
                      </div>
                    </div>
                  </form>
                </div>
              </div>              
            </div>
            <div class="col">
              <div class="card shadow mb-5">
                <div class="card-header py-3">
                  <h6 class="m-0 font-weight-bold text-primary">AKTIVITAS PETUGAS </h6>
                </div>
                <div class="card-body">
                  <table id="tabelActivity" class="table table-striped table-striped">
                    <thead>
                      <tr>
                        <th>No</th>
                        <th>Aktivitas</th>
                        <th>Tanggal</th>
                      </tr>
                    </thead>
                    <tbody>
                      <tr>
                        <td>1</td>
                        <td>Login</td>
                        <td>09/03/2020</td>
                      </tr>
                    </tbody>
                    <tfoot>
                      <tr>
                        <th>No</th>
                        <th>Aktivitas</th>
                        <th>Tanggal</th>
                      </tr>
                    </tfoot>
                  </table>
                </div>
              </div>  
            </div>
          </div>
        </div>
        <!-- /.container-fluid -->

      </div>
      <!-- End of Main Content -->

      <!-- Footer -->
        <%- include('../partials/footer') -%>
      <!-- End of Footer -->

    </div>
    <!-- End of Content Wrapper -->

  </div>
  <!-- End of Page Wrapper -->

  <!-- Scroll to Top Button-->
  <a class="scroll-to-top rounded" href="#page-top">
    <i class="fas fa-angle-up"></i>
  </a>

  <!-- LOGOUT MODAL-->
  <%- include('../partials/logout-modal') -%>

  <!-- Modal Tambah Tagihan -->
  <div class="modal fade" id="modal-tagihan" tabindex="-1" role="dialog" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
      <div class="modal-content">
        <div class="modal-header">
          <h6 class="modal-title"><i class="fa fa-plus"></i> TAMBAH TAGIHAN SPP</h6>
          <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
          </button>
        </div>
        <div class="modal-body">
          <form>
            <div class="form-group row">
              <div class="col-md-12 col-form-label">Tahun Ajaran</div>
              <div class="col-md-12">
                <input type="text" class="form-control">
                <small class="form-text text-muted">Bisa dipilih lebih dari 1 tahun ajaran</small>
              </div>
            </div>
          </form>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-secondary" data-dismiss="modal">Tutup</button>
          <button type="button" class="btn btn-primary">Simpan</button>
        </div>
      </div>
    </div>
  </div>

  <!-- JS VENDOR -->
  <%- include('../partials/js') -%>

  <!-- Custom JS -->
  <script>
  $(document).ready(function() {
      $('#tabelActivity').DataTable();
  });
  </script>

</body>

</html>
