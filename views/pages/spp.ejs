<!DOCTYPE html>
<html lang="en">

<head>

  <meta charset="utf-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
  <meta name="description" content="">
  <meta name="author" content="">

  <title>eSPP | SPP</title>

  <!-- CSS Vendor -->
  <%- include('partials/css') -%>

</head>

<body id="page-top">

  <!-- Page Wrapper -->
  <div id="wrapper">

    <!-- SIDEBAR -->
    <%- include('partials/sidebar') -%>
    <!-- End of Sidebar -->

    <!-- Content Wrapper -->
    <div id="content-wrapper" class="d-flex flex-column">

      <!-- Main Content -->
      <div id="content">

        <!-- TOPBAR -->
        <%- include('partials/header') -%>
        <!-- End of Topbar -->

        <!-- CONTENT AREA -->
        <div class="container-fluid">

          <nav aria-label="breadcrumb">
            <ol class="breadcrumb shadow bg-white">
              <li class="breadcrumb-item active" aria-current="page">Manajemen SPP /</li>
            </ol>
          </nav>

          <!-- ROW 1 -->
          <div class="row">
            <div class="col-md-4">
              <div class="card shadow mb-5">
                <div class="card-header py-3">
                  <h6 class="m-0 font-weight-bold text-primary">FORMULIR SPP</h6>
                </div>
                <div class="card-body">
                  <div class="row">
                    <div class="col">
                      <form id="formSpp">
                        <div class="form-group row">
                          <div class="col-md-12 col-form-label text-muted">Tahun Ajaran</div>
                          <div class="col-md-5 pr-0">
                            <select class="form-control" placeholder="ex: 2019" id="tahunSatu" maxlength="4" required>
                              <option></option>
                            </select>
                          </div>
                          <div class="col-md-2 pl-0 pr-0 text-center text-muted">
                            <h4>/</h4>
                          </div>
                          <div class="col-md-5 pl-0">
                            <select class="form-control" placeholder="ex: 2020" id="tahunDua" maxlength="4" required>
                              <option></option>
                            </select>
                          </div>
                        </div>
                        <div class="form-group row">
                          <div class="col-md-12 col-form-label text-muted">Nominal Pertahun <small>(Rp)</small></div>
                          <div class="col-md-12">
                            <input type="number" class="form-control" placeholder="0" id="nominalTahun" required>
                          </div>
                        </div>
                        <div class="form-group row">
                          <div class="col-md-12 col-form-label text-muted">Nominal Perbulan <small>(Rp)</small></div>
                          <div class="col-md-12">
                            <input type="number" class="form-control" placeholder="0" id="nominalBulan" disabled>
                          </div>
                        </div>
                        <div class="form-group row">
                          <div class="col">
                            <button type="submit" class="btn btn-primary w-25 float-right mt-3">Simpan</button>
                          </div>
                        </div>
                      </form>
                    </div>
                  </div>
                </div>
              </div>              
            </div>
            <div class="col">
                <div class="card shadow mb-5">
                  <div class="card-header py-3">
                    <div class="row">
                      <div class="col">
                        <h6 class="font-weight-bold text-primary mt-1">DAFTAR TAGIHAN SPP <small>/TAHUN AJARAN</small></h6>
                      </div>
                      <div class="col">
                        <a href="#" class="d-none d-sm-inline-block btn btn-sm btn-secondary shadow-sm float-right"><i class="fas fa-download fa-sm text-white"></i> Cetak Laporan</a>
                      </div>
                    </div>
                  </div>
                  <div class="card-body">
                      <table id="tabelSpp" class="table table-striped table-striped" style="width:100%">
                          <thead>
                            <tr>
                              <th>No</th>
                              <th>Tahun Ajaran</th>
                              <th>Nominal (RP)</th>
                              <th>Status</th>
                              <th>Aksi</th>
                            </tr>
                          </thead>
                          <tbody>
                            <!-- ON JS -->
                          </tbody>
                          <tfoot>
                            <tr>
                              <th>No</th>
                              <th>Tahun Ajaran</th>
                              <th>Nominal (RP)</th>
                              <th>Status</th>
                              <th>Aksi</th>
                            </tr>
                          </tfoot>
                      </table>
                  </div>
                </div>
            </div>
          </div>

        </div>
        <!-- /.container-fluid -->

      </div>
      <!-- End of Main Content -->

      <!-- Footer -->
        <%- include('partials/footer') -%>
      <!-- End of Footer -->

    </div>
    <!-- End of Content Wrapper -->

  </div>
  <!-- End of Page Wrapper -->

  <!-- Scroll to Top Button-->
  <a class="scroll-to-top rounded" href="#page-top">
    <i class="fas fa-angle-up"></i>
  </a>

  <!-- LOGOUT MODAL-->
  <%- include('partials/logout-modal') -%>

  <!-- EDIT MODAL -->
  <div class="modal fade" id="modalEditSpp" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
      <div class="modal-content">
        <form id="formEditSpp">
          <div class="modal-header">
            <h5 class="modal-title" id="exampleModalLongTitle"><i class="fa fa-edit"></i> EDIT SPP</h5>
            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
              <span aria-hidden="true">&times;</span>
            </button>
          </div>
          <div class="modal-body">
            <input type="hidden" id="idKelas">
            <div class="form-group row">
              <input type="hidden" id="idSpp">
              <div class="col-md-3 col-form-label text-muted">Tahun Ajaran</div>
              <div class="col-md-9">
                <div class="row">
                  <div class="col-md-5">
                    <select class="form-control" id="editTahunSatu" style="width: 100% !important">
                      <option></option>
                    </select>
                  </div>
                  <div class="col-md-2 text-center text-muted pl-0 pr-0">
                    <h4>/</h4>
                  </div>
                  <div class="col-md-5">
                    <select class="form-control" id="editTahunDua" style="width: 100% !important">
                      <option></option>
                    </select>
                  </div>
                </div>
              </div>
            </div>
            <div class="form-group row">
              <div class="col-md-3 col-form-label text-muted">Status</div>
              <div class="col-md-9">
                <select class="form-control" id="editActive">
                  <option value="true">Aktif</option>
                  <option value="false">Non Aktif</option>
                </select>
              </div>
            </div>
            <div class="form-group row">
              <div class="col-md-3 col-form-label text-muted">Nominal <small>(RP)</small></div>
              <div class="col-md-9">
                <input type="number" class="form-control" id="editNominal" placeholder="0" required>
              </div>
            </div>
          </div>
          <div class="modal-footer">
            <button type="button" class="btn btn-secondary" data-dismiss="modal">Tutup</button>
            <button type="submit" class="btn btn-primary">Ubah</button>
          </div>
        </form>
      </div>
    </div>
  </div>

  <!-- DELETE MODAL -->
  <div class="modal fade" id="modalHapusSpp" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title" id="exampleModalLongTitle"><i class="fa fa-trash"></i> HAPUS SPP</h5>
          <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
          </button>
        </div>
        <div class="modal-body">
          <input type="hidden" id="idSpp">
          <p style="text-align: justify;">Tindakan ini bisa dibatalkan. Tindakan ini secara permanen akan menghapus data SPP dan bisa saja berpengaruh terhadap data lainnya.</p>
          <p>Tolong ketik <b class="text-dark" id="confirmTahun">Tahun Ajaran</b> untuk mengkonfirmasi.</p>
          <input type="text" class="form-control" id="confirmInput">
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-danger w-100" id="confirmDelete" disabled>Saya menerima konsekuensi, hapus data ini</button>
        </div>
      </div>
    </div>
  </div>

  <!-- JS VENDOR -->
  <%- include('partials/js') -%>

  <!-- Custom JS -->
  <script>
  $(document).ready(function() {
      $('#tahunSatu').select2({
        placeholder: 'ex. 2019'
      });
      $('#tahunDua').select2({
        placeholder: 'ex. 2020'
      });
      $('#editTahunSatu').select2({
        placeholder: 'ex. 2019'
      });
      $('#editTahunDua').select2({
        placeholder: 'ex. 2020'
      });
      getTahun();
      getSpp();
  });

  //POST SPP
  $('#formSpp').submit(function(){
    var tahunAjaran = $('#tahunSatu').val() +'/'+ $('#tahunDua').val();
    var nominal = $('#nominalTahun').val();

    var data = {
      tahun_ajaran: tahunAjaran,
      nominal: nominal
    }

    $.ajax({
      type: 'POST',
      url: '/spp/manajemen_spp',
      contentType: 'application/json',
      data: JSON.stringify(data),
      success: function(res){
        if(res == false){
          swalError();
        }

        swalSuccess('post', 'spp');
      }
    });

    return false;
  });

  //PUT SPP
  $('#formEditSpp').submit(function(){
    var idSpp = $('#idSpp').val();
    var data = {
      tahunAjaran: $('#editTahunSatu').val()+'/'+ $('#editTahunDua').val(),
      status: $('#editActive').val(),
      nominal: $('#editNominal').val()
    };

    $.ajax({
      type: 'PUT',
      url: '/spp/manajemen_spp/'+idSpp,
      contentType: 'application/json',
      data: JSON.stringify(data),
      success: function(res){
        if(res == false){
          swalError();
        }

        swalSuccess('put', 'spp');
      }
    });

    return false;
  });

  //GET SPP
  function getSpp(){
    $.ajax({
      type: 'GET',
      url: '/spp/manajemen_spp',
      contentType: 'application/json',
      success: function(res){
        var tabel = $('#tabelSpp tbody');
        tabel.html('');

        res.forEach((spp, i) => {
          i++;
          
          tabel.append(`
          <tr>
            <td>`+i+`</td>
            <td>`+spp.tahun_ajaran+`</td>
            <td>`+spp.nominal+`</td>
            <td>`+labelStatus(spp.active)+`</td>
            <td>
              <a href="#" title="edit" class="mr-1" data-toggle="modal" data-target="#modalEditSpp" onclick="getEdit('`+spp.id_spp+`', '`+spp.tahun_ajaran+`', '`+spp.nominal+`', '`+spp.active+`')"><i class="fa fa-edit"></i></a>
              <a href="#" title="hapus" class="text-danger" data-toggle="modal" data-target="#modalHapusSpp" onclick="getDelete('`+spp.id_spp+`', '`+spp.tahun_ajaran+`')"><i class="fa fa-trash"></i></a>
            </td>
          </tr>
          `);
        });

        $('#tabelSpp').DataTable();

      }
    });
  }

  //AUTO SET NOMINAL BULAN
  $('#nominalTahun').on('keyup', function(){
    if(this.value.length > 1){
      $('#nominalBulan').val(this.value/12);
    } else{
      $('#nominalBulan').val(0);
    }
  });

  //GET DAFTAR TAHUN TO OPTION
  function getTahun(){
    var tahunAwal = 2019, tahunAkhir = 2035, listTahun = [];
    var tahunSatu = $('#tahunSatu'), tahunDua = $('#tahunDua');
    var editTahunSatu = $('#editTahunSatu'), editTahunDua = $('#editTahunDua');

    for(var i=tahunAwal;i<=tahunAkhir;i++){
      listTahun.push(i)
    }
    
    listTahun.forEach((tahun) => {
      tahunSatu.append('<option value="'+tahun+'">'+tahun+'</option>');
      tahunDua.append('<option value="'+tahun+'">'+tahun+'</option>');

      editTahunSatu.append('<option value="'+tahun+'">'+tahun+'</option>');
      editTahunDua.append('<option value="'+tahun+'">'+tahun+'</option>');
    });

  }

  //GET VALUE TO FORM EDIT
  function getEdit(idSpp, tahunAjaran, nominal, active){
    var pisah = tahunAjaran.split('/');

    $('#idSpp').val(idSpp);
    $('#editTahunSatu').val(pisah[0]).trigger('change');
    $('#editTahunDua').val(pisah[1]).trigger('change');
    $('#editNominal').val(nominal);
    $('#editActive').val(active);
  }

  //GET VALUE TO MODAL DELETE
  function getDelete(idSpp, tahunAjaran){
    $('#idSpp').val(idSpp);
    $('#confirmTahun').text(tahunAjaran);
  }

  $('#confirmInput').keyup(function(){
    var tahunAjaran = $('#confirmTahun').text();
    var input = $(this).val();

    if(tahunAjaran == input){
      $('#confirmDelete').attr('disabled', false);
    } else{
      $('#confirmDelete').attr('disabled', true);
    }
  });

  $('#confirmDelete').on('click', function(){
    var idSpp = $('#idSpp').val();

    $.ajax({
      type: 'DELETE',
      url: '/spp/manajemen_spp/'+idSpp,
      contentType: 'application/json',
      success: function(res){
        if(res == false){
          swalError();
        }

        swalSuccess('delete', 'spp');
      }
    });
  });

  </script>

</body>

</html>
